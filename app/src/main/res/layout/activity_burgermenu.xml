<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Burgers"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="25dp"
            android:background="#930101"
            android:gravity="center"
            android:textColor="@android:color/white"/>

        <!-- Burger Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/burgerImage1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/burger1"
                tools:srcCompat="@drawable/burger1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/burgerName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classic Cheeseburger"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/burgerDescription1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beef patty, cheddar cheese, lettuce, tomato, and pickles"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/burgerPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs799.99"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_dark"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- Burger Item 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/burgerImage2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/burger2"
                tools:srcCompat="@drawable/burger2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/burgerName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BBQ Bacon Burger"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/burgerDescription2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bacon, BBQ sauce, cheddar cheese, lettuce, and tomato"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/burgerPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs899.99"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_dark"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- Burger Item 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/burgerImage3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/burger1"
                tools:srcCompat="@drawable/burger3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/burgerName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veggie Burger"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/burgerDescription3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grilled veggie patty, lettuce, tomato, onions, and pickles"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/burgerPrice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs749.99"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_dark"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- Burger Item 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/burgerImage4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/burger4"
                tools:srcCompat="@drawable/burger4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/burgerName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spicy Chicken Burger"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/burgerDescription4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grilled chicken, spicy sauce, lettuce, and pickles"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/burgerPrice4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs849.99"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_dark"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!-- Burger Item 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/burgerImage5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/burger5"
                tools:srcCompat="@drawable/burger5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/burgerName5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Double Bacon Cheeseburger"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/burgerDescription5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Double beef patties, double cheddar cheese, bacon, lettuce, tomato"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/burgerPrice5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs999.99"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_red_dark"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

    </LinearLayout>
</ScrollView>
